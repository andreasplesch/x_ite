{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Dist",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Version",
            "type": "shell",
            "command": "make",
            "args": ["version"],
            "problemMatcher": []
        },
        {
            "label": "Git Push GitHub",
            "type": "shell",
            "command": "git",
            "args": ["push", "github"],
            "problemMatcher": []
        },
        {
            "label": "Git List Untracked Files",
            "type": "shell",
            "command": "git",
            "args": ["ls-files", "--others", "--exclude-standard"],
            "problemMatcher": []
        }
    ]
}